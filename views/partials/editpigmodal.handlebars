{{#with user.pigs as | pigs |}}
{{#each pigs as | pig |}}
<div class="modal fade" id="pig{{pig.id}}" tabindex="-1" role="dialog" aria-labelledby="pig{{pig.id}}" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pig{{pig.id}}">{{pig.name}}</h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="edit-pig-form">
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="inputEmail4">Pig Name:</label>
              <input type="text" class="form-control" id="pigname" value="{{pig.name}}">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="duedate">Due Date:</label>
              <input type="date" class="form-control" id="date" value="{{pig.due_date}}">
            </div>
            <div class="form-group col-md-6">
              <label for="amountdue">Amount Due:</label>
              <input type="integer" class="form-control" id="amountdue" value="{{pig.amount_due}}">
            </div>
          </div>
          <div class="form-row">
              {{!-- <div class="form-group col-md-6">
              <label for="amountdue">Direct Deposit Reactor:</label>
            <div class="form-check form-check-inline">
